<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.audiorecorder.ui.home.HomeFragment"
        android:label="@string/title_main_tab"
        tools:layout="@layout/fragment_main" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.audiorecorder.ui.dashboard.DashboardFragment"
        android:label="@string/title_settings_tab"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.audiorecorder.ui.notifications.NotificationsFragment"
        android:label="@string/title_records_tab"
        tools:layout="@layout/fragment_records" />
</navigation>